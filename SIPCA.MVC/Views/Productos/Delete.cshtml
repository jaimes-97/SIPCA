@model SIPCA.CLASES.Models.Producto

@{
    ViewBag.Title = "Borrar";
}

<h2>Borrar</h2>

<h3>¿Estas seguro de borrar este Producto?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayName("Categoría")
           @* @Html.DisplayNameFor(model => model.Categoria.Nombre)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Marca.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Marca.Nombre)
        </dd>

