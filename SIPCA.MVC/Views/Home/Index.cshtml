@model IEnumerable<SIPCA.CLASES.Models.Producto>

@{
    ViewBag.Title = "Inicio";
}
<style type="text/css">
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: auto;
        height: 450px;
        margin: 8px;
        background-color: #bec1c3;
    }
    .card:hover { box-shadow: 0 10px 18px 0 rgba(0,0,0,0.3); }
    .content { padding: 4px 16px; height: 80px; background: lavender; }
    .card img{ margin: 0 auto; width: 85%;}
    #myCarousel{ width:80%; margin:0 auto; height: 400px; }
    img.icar { margin: 0 auto; }
    @@media screen and ( max-width : 420px) {
        #myCarousel{ height: 300px; }
        img.icar { min-height: 300px; }
    }
</style>
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>

<br/>
<br />
<div class="row text-center">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img style="max-height:400px;" class="img-responsive icar" src="https://static.vix.com/es/sites/default/files/styles/large/public/imj/imujer/P/Pantuflas-de-invierno-para-mujeres3.jpg?itok=n8_9Qf0J" alt="Chania">
                <div class="carousel-caption" style="background-color: rgba(214, 214, 230, 0.39);">
                    <h3 class="label label-primary" style="font-size:1.6rem;">Pantunflas Tommy</h3>
                    <p style="color:black">Producto con un 20% de descuento, aprovecha ya!.</p>
                </div>
            </div>

            <div class="item">
                <img style="max-height:400px;" class="img-responsive icar" src="http://www.marinadelaredo.es/images/pfiosao/FxQ110-Zapatillas-Asics-Onitsuka-Tiger-Mexico-66-Hombre-Verde-Negro-Rojo-Zapatos-En-Madrid-84296671_6320.jpg" alt="Chania">
                <div class="carousel-caption" style="background-color: rgba(214, 214, 230, 0.39);">
                    <h3 class="label label-primary" style="font-size:1.6rem;">Onisuka Tiger</h3>
                    <p style="color:black">Variados y en multiples Colores.</p>
                </div>
            </div>

            <div class="item">
                <img style="max-height:400px;" class="img-responsive icar" src="http://zapachic.com/wp-content/uploads/2015/04/3-Colecci%C3%B3n-Heritage-de-Supra-Shoes.jpg " alt="Flower">
                <div class="carousel-caption" style="background-color: rgba(214, 214, 230, 0.39);">
                    <h3 class="label label-primary" style="font-size:1.6rem;">Supra</h3>
                    <p style="color:black">Modelo de Botines 2015.</p>
                </div>
            </div>

            <div class="item">
                <img style="max-height:400px;" class="img-responsive icar" src="http://www.catax.es/image/cache/data/category_5/tenis-levis-negros-enos-5512-636-500x416_0.jpg" alt="Flower">
                <div class="carousel-caption" style="background-color: rgba(214, 214, 230, 0.39);">
                    <h3 class="label label-primary" style="font-size:1.6rem;">Levi´s</h3>
                    <p style="color:black">Llevalos este Viernes Negro en Liquidación.</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row" style="margin-top: 30px;">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card">
					@if(item.Imagen!=null){
					 <img src="@Url.Content(item.Imagen.ImagePath)" alt="1" class="img-responsive" style="height: 370px;">
					}
					
                <div class="content">
                    <h6><b>@Html.DisplayFor(modelItem => item.Nombre)</b></h6>
                    <p>@Html.DisplayFor(modelItem => item.Categoria.Nombre)</p>
					<h6>
					 @Html.ActionLink("Añadir al carrito", "Create", "Productos", new { @class="actLink"},new {style="text-decoration:none;"})
					 </h6>
						 

						 
                </div>
            </div>
        </div>
    }
</div>
   