                <a href="@Url.Action("Index", "ApplicationUsers")"
                   data-toggle="tooltip" data-placement="bottom" title="Ir a Usuarios">
                    <span class="btn btn-primary">Ir a los Usuarios</span>
                </a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        //add tooltip
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>