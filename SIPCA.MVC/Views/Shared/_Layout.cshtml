<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIPCA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SIPCA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contactanos", "Contact", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-book "></span> Catálogos<b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Marcas", "Index", "Marcas")</li>
                                <li>@Html.ActionLink("Categorías", "Index", "Categorias")</li>
                                <li>@Html.ActionLink("Productos", "Index", "Productos")</li>
                                <li>@Html.ActionLink("Proveedores", "Index", "Proveedors")</li>
                                <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                                <li>@Html.ActionLink("Tipo Entregas", "Index", "TipoEntregas")</li>
                                <li>@Html.ActionLink("Roles", "Index", "ApplicationRoles")</li>
                                <li>@Html.ActionLink("Usuarios", "Index", "ApplicationUsers")</li>
                            </ul>
                        </li>
                    }
			        
                </ul>
                @if (Session["contador"] != null)
                {
                    ViewBag.contador = Session["contador"].ToString();
                }else { ViewBag.contador = "nada"; }
                <p style="display: inline-block; color: aliceblue; position: relative; margin: 0px 5px; padding-top: 15px;">
                    <a href="#"><img src="data:image/svg+xml;utf8;base64," /></a>
                 @ViewBag.contador</p>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SIPCA</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
